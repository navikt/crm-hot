<?xml version="1.0" encoding="UTF-8"?>
<LightningComponentBundle xmlns="http://soap.sforce.com/2006/04/metadata">
    <apiVersion>54.0</apiVersion>
    <description>Component which shows service resources assigned to Service Appointments under the same WorkOrder</description>
    <isExposed>true</isExposed>
    <masterLabel>HOT Interpreters</masterLabel>
    <targets>
        <target>lightning__RecordPage</target>
    </targets>
    <targetConfigs>
        <targetConfig targets="lightning__RecordPage">
            <objects>
                <object>WorkOrder</object>
                <object>ServiceAppointment</object>
            </objects>
            <property name="mergeField" type="String" label="Merge Field (Work Order Id)" />
            <property name="objectName" type="String" label="ObjectName (API Name)" />
        </targetConfig>
    </targetConfigs>
</LightningComponentBundle>